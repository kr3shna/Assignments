n = int(input())
numbers = []

for i in range(n):
    num = int(input())
    numbers.append(num)
    
    minimum = min(numbers)
    maximum = max(numbers)
    total_sum = sum(numbers)
    average = total_sum / len(numbers)
    
    mode_count = {}
    for num in numbers:
        mode_count[num] = mode_count.get(num, 0) + 1
    max_count = max(mode_count.values())
    modes = [num for num, count in mode_count.items() if count == max_count]
    mode = modes[0] if modes else None
    
    print(f"min, max, sum, average and mode after addition of {numbers[-1]} is {minimum}, {maximum}, {total_sum}, {average}, {mode}.")
